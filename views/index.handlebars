<div class="row">
  <div class="col">
    <img src="/assets/images/burger.png" alt="burger" width="300px">
  </div>
</div>

<div class="row">
  <div class="col">
    <ul class="list-group">
      <h3>Burgers to be Devoured!</h3>
      {{#each burgers}}
        {{#unless devoured}}
          <li class="list-group-item">
            {{id}}
            {{burger_name}}
            <button class="devourer btn btn-danger" data-id="{{id}}" data-devoured="{{devoured}}">
              <i class="fas fa-utensils"></i> Devour it!
            </button>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

    <div class="col">
    <ul class="list-group">
      <h3>Burgers Devoured!</h3>
      {{#each burgers}}
        {{#if devoured}}
          <li class="list-group-item">
            {{id}}
            {{burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>


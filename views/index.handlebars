<h1>Burgers!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        {{burger_name}}

        <button class="devourer" data-id="{{id}}" data-devoured="{{devoured}}">
          Devourer!
        </button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{burger_name}}

        <p>Burgers Devoured!</p>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add A New Awesome Original Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgy">Burger Name:</label>
    <input type="text" id="burgy" name="name">
  </div>

  <button type="submit">Add Burger!</button>
</form>
